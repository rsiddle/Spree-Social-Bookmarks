<%
if Spree::SocialBookmarks::Config[:meta_tags]
	open_graph = {
		:title => title,
		:url => url,
		:type => :website
	}
	
	unless product.nil?
		open_graph[:image] = request.protocol + request.host + product.images.first.attachment.url if product.images.count > 0
		open_graph[:description] = description
	end
	
	content_for :head do
		open_graph.each do |property, content|
		%>
<%= tag(:meta, :property => "og:#{property}", :content => content) %>
<%
		end
	end
end
